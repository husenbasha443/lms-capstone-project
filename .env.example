########## Core Platform ##########
ENVIRONMENT=development
LOG_LEVEL=INFO

########## Database ##########
#DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/ltc_ai_db
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/your_db_name


########## Azure OpenAI ##########
AZURE_OPENAI_ENDPOINT=xxxxxxxxx
AZURE_OPENAI_KEY=xxxxxxxx
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small
AZURE_OPENAI_API_VERSION=2025-01-01-preview



########## Azure Speech ##########
AZURE_SPEECH_KEY=xxxxx
AZURE_SPEECH_REGION=eastus


########## Azure Blob Storage (either connection string OR AAD) ##########
# Option 1: Connection string (simple for local/dev)
#AZURE_BLOB_CONNECTION_STRING=your-blob-connection-string
#AZURE_BLOB_CONTAINER=ltc-recordings
#AZURE_BLOB_PUBLIC_CONTAINER=ltc-public-media

# Option 2: Azure AD auth (recommended for production)
# ==============================
# Azure AD (App Registration)
# ==============================

AZURE_CLIENT_ID=xxxxxxxx
AZURE_TENANT_ID=xxxxxxxx
AZURE_CLIENT_SECRET=xxxxxxxx

# ==============================
# Azure Blob Storage
# ==============================

AZURE_STORAGE_ACCOUNT_URL=xxxxxx


########## ChromaDB ##########
CHROMA_DB_DIR=./chroma_db
CHROMA_COLLECTION_NAME=ltc_lessons

########## Auth / Security ##########
JWT_SECRET_KEY=xxxxx
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

########## Frontend ##########
#VITE_API_BASE_URL=http://localhost:8000

ANONYMIZED_TELEMETRY=False

########## Storage ##########
# Set to "cloud" and fill in Cloudinary credentials to switch to cloud storage
STORAGE_TYPE=local
#CLOUDINARY_CLOUD_NAME=your-cloud-name
#CLOUDINARY_API_KEY=your-api-key
#CLOUDINARY_API_SECRET=your-api-secret

